<Application x:Class="Sklep_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Sklep_WPF"
             xmlns:views="clr-namespace:Sklep_WPF.View.Views"
             xmlns:vm="clr-namespace:Sklep_WPF.ViewModel"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UserViewModel}">
            <views:UserPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ShopViewModel}">
            <views:ShopPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CartViewModel}">
            <views:CartPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:OrderHistoryViewModel}">
            <views:OrderHistoryPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsPage/>
        </DataTemplate>
    </Application.Resources>
</Application>
